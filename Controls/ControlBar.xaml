<UserControl xmlns:Controls="clr-namespace:NutzCode.MPVPlayer.WPF.Wrapper.Controls"  x:Class="NutzCode.MPVPlayer.WPF.Wrapper.Controls.ControlBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NutzCode.MPVPlayer.WPF.Wrapper.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="240" d:DesignWidth="600" Foreground="White">
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"></BooleanToVisibilityConverter>
    </UserControl.Resources>
    <Grid Background="Transparent">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="{Binding ControlBarSize, RelativeSource={RelativeSource AncestorType={x:Type local:ControlBar}},FallbackValue=48}"></ColumnDefinition>
            <ColumnDefinition Width="{Binding TimeBarSize, UpdateSourceTrigger=PropertyChanged, RelativeSource={RelativeSource AncestorType={x:Type local:ControlBar}},FallbackValue=64}"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="{Binding TimeBarSize, UpdateSourceTrigger=PropertyChanged, RelativeSource={RelativeSource AncestorType={x:Type local:ControlBar}},FallbackValue=64}"></ColumnDefinition>
            <ColumnDefinition Width="{Binding ControlBarSize, RelativeSource={RelativeSource AncestorType={x:Type local:ControlBar}},FallbackValue=48}"></ColumnDefinition>
            <ColumnDefinition Width="{Binding ControlBarSize, RelativeSource={RelativeSource AncestorType={x:Type local:ControlBar}},FallbackValue=48}"></ColumnDefinition>
            <ColumnDefinition Width="{Binding MaximizeSize, UpdateSourceTrigger=PropertyChanged, RelativeSource={RelativeSource AncestorType={x:Type local:ControlBar}},FallbackValue=48}"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="{Binding ControlBarSize, RelativeSource={RelativeSource AncestorType={x:Type local:ControlBar}},FallbackValue=48}"></RowDefinition>
        </Grid.RowDefinitions>
        <Controls:Play Background="{Binding BackgroundColor, RelativeSource={RelativeSource AncestorType={x:Type local:ControlBar}}}" x:Name="Play" PaddingRelation="{Binding PaddingRelation, RelativeSource={RelativeSource AncestorType={x:Type local:ControlBar}}}" MouseOverColor="{Binding MouseOverColor, RelativeSource={RelativeSource AncestorType={x:Type local:ControlBar}}}" Foreground="{Binding Foreground, RelativeSource={RelativeSource AncestorType={x:Type local:ControlBar}}}" Grid.Row="1" Grid.Column="0"/>
        <Controls:Time Background="{Binding BackgroundColor, RelativeSource={RelativeSource AncestorType={x:Type local:ControlBar}}}" Foreground="{Binding Foreground, RelativeSource={RelativeSource AncestorType={x:Type local:ControlBar}}}" FontSize="{Binding TimeFontSize, UpdateSourceTrigger=PropertyChanged, RelativeSource={RelativeSource AncestorType={x:Type local:ControlBar}}}" FontFamily="{Binding FontFamily, RelativeSource={RelativeSource AncestorType={x:Type local:ControlBar}}}" Padding="{Binding TimeBarPadding, RelativeSource={RelativeSource AncestorType={x:Type local:ControlBar}}}" x:Name="Lefttime" Alignment="Right" Grid.Row="1" Grid.Column="1"></Controls:Time>
        <Controls:Seekbar Background="{Binding BackgroundColor, RelativeSource={RelativeSource AncestorType={x:Type local:ControlBar}}}" LeftBarColor="{Binding SeekBarColor, RelativeSource={RelativeSource AncestorType={x:Type local:ControlBar}}}" RightBarColor="{Binding SeekBarBackColor, RelativeSource={RelativeSource AncestorType={x:Type local:ControlBar}}}"  Grid.Row="1" Grid.Column="2" x:Name="Seekbar" MaxPosition="1000" Position="500" HorizontalAlignment="Stretch" BarSize="{Binding SeekBarBarSize,  UpdateSourceTrigger=PropertyChanged, RelativeSource={RelativeSource AncestorType={x:Type local:ControlBar}}}" KnobSize="{Binding SeekBarKnobSize,  UpdateSourceTrigger=PropertyChanged, RelativeSource={RelativeSource AncestorType={x:Type local:ControlBar}}}"/>
        <Controls:Time Background="{Binding BackgroundColor, RelativeSource={RelativeSource AncestorType={x:Type local:ControlBar}}}" Foreground="{Binding Foreground, RelativeSource={RelativeSource AncestorType={x:Type local:ControlBar}}}" FontSize="{Binding TimeFontSize, UpdateSourceTrigger=PropertyChanged, RelativeSource={RelativeSource AncestorType={x:Type local:ControlBar}}}" FontFamily="{Binding FontFamily, RelativeSource={RelativeSource AncestorType={x:Type local:ControlBar}}}" Padding="{Binding TimeBarPadding, RelativeSource={RelativeSource AncestorType={x:Type local:ControlBar}}}"  x:Name="Righttime" Alignment="Left"  Grid.Row="1" Grid.Column="3" ></Controls:Time>
        <Controls:Volume Height="{Binding VolumeHeight, RelativeSource={RelativeSource AncestorType={x:Type local:ControlBar}}}" BackgroundColor="{Binding BackgroundColor, RelativeSource={RelativeSource AncestorType={x:Type local:ControlBar}}}" BottomBarColor="{Binding SeekBarColor, RelativeSource={RelativeSource AncestorType={x:Type local:ControlBar}}}" TopBarColor="{Binding SeekBarBackColor, RelativeSource={RelativeSource AncestorType={x:Type local:ControlBar}}}"  PaddingRelation="{Binding PaddingRelation, RelativeSource={RelativeSource AncestorType={x:Type local:ControlBar}}}" MouseOverColor="{Binding MouseOverColor, RelativeSource={RelativeSource AncestorType={x:Type local:ControlBar}}}" Foreground="{Binding Foreground, RelativeSource={RelativeSource AncestorType={x:Type local:ControlBar}}}" x:Name="Volume" Grid.Row="0" Grid.RowSpan="2" VolumeLevel="0.5" BarSize="{Binding VolumeBarSize, UpdateSourceTrigger=PropertyChanged, RelativeSource={RelativeSource AncestorType={x:Type local:ControlBar}}}" KnobSize="{Binding VolumeKnobSize, UpdateSourceTrigger=PropertyChanged, RelativeSource={RelativeSource AncestorType={x:Type local:ControlBar}}}" Grid.Column="4" VerticalAlignment="Bottom" />
        <Controls:Menu HasAudios="{Binding HasAudios, RelativeSource={RelativeSource AncestorType={x:Type local:ControlBar}}}" HasSubs="{Binding HasSubs, RelativeSource={RelativeSource AncestorType={x:Type local:ControlBar}}}" HasExit="{Binding HasExit, RelativeSource={RelativeSource AncestorType={x:Type local:ControlBar}}}" BackgroundColor="{Binding BackgroundColor, RelativeSource={RelativeSource AncestorType={x:Type local:ControlBar}}}" PaddingRelation="{Binding PaddingRelation, RelativeSource={RelativeSource AncestorType={x:Type local:ControlBar}}}" MouseOverColor="{Binding MouseOverColor, RelativeSource={RelativeSource AncestorType={x:Type local:ControlBar}}}" Foreground="{Binding Foreground, RelativeSource={RelativeSource AncestorType={x:Type local:ControlBar}}}" x:Name="Menu" Grid.Row="0" Grid.RowSpan="2" Grid.Column="5" VerticalAlignment="Bottom"></Controls:Menu>
        <Controls:Button Visibility="{Binding HasMaximize, Converter={StaticResource BooleanToVisibilityConverter}, RelativeSource={RelativeSource AncestorType={x:Type local:ControlBar}}}" Background="{Binding BackgroundColor, RelativeSource={RelativeSource AncestorType={x:Type local:ControlBar}}}" PaddingRelation="{Binding PaddingRelation, RelativeSource={RelativeSource AncestorType={x:Type local:ControlBar}}}" MouseOverColor="{Binding MouseOverColor, RelativeSource={RelativeSource AncestorType={x:Type local:ControlBar}}}" Foreground="{Binding Foreground, RelativeSource={RelativeSource AncestorType={x:Type local:ControlBar}}}" Image="pack://application:,,,/NutzCode.MPVPlayer.WPF.Wrapper;component/images/fs.png" x:Name="Maximize" Grid.Row="1" Grid.Column="6"  HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
    </Grid>
</UserControl>  
